<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Shy.blog.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.Shy.blog.entity.User">
        <id column="name" jdbcType="VARCHAR" property="name"/>
        <result column="id" jdbcType="VARCHAR" property="id"/>
        <result column="mark" jdbcType="VARCHAR" property="mark"/>
        <result column="hero_name" jdbcType="VARCHAR" property="heroName"/>
        <result column="first_sight" jdbcType="VARCHAR" property="firstSight"/>
    </resultMap>
<!-- 查询个人信息 -->
    <select id="getUserById" resultType="com.Shy.blog.entity.User" parameterType="String">
        select * from honkai where id=#{id}
    </select>
<!-- 查询所有信息 -->
    <select id="selectAll" resultType="com.Shy.blog.entity.User">
        select * from honkai
    </select>
 </mapper>